<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <corners android:radius="2dp" />
    <gradient
        android:angle="90"
        android:startColor="@color/window_start"
        android:centerColor="@color/window_start"
        android:endColor="@color/window_end"
        android:centerX="45%"
        android:type="linear" />
    <padding
        android:bottom="5dp"
        android:left="10dp"
        android:right="10dp"
        android:top="5dp" />
    <stroke
        android:width="1dp"
        android:color="@color/window_border" />
</shape>