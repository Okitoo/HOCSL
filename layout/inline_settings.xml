<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    tools:context=".commandCenter">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolboxBG" >

        <TextView
            style="@style/TextViewStyleTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Settings"
            android:id="@+id/textView84"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/hlp_shop"
            android:src="@mipmap/question"
            android:baselineAlignBottom="false"
            android:cropToPadding="false"
            android:contextClickable="false"
            android:background="@color/transparent" />
    </LinearLayout>

    <net.okitoo.hackers.Modules.OkitooOverrides.OkitooTabHost
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:id="@+id/th"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:tabStripEnabled="false"></TabWidget>

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/remote_connection_window"
                android:focusableInTouchMode="false"
                android:forceHasOverlappingRendering="false">

                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/transparent"
                    android:transitionGroup="true">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/scrollView8">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/remote_connection_window">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/question_which_server"
                                    android:id="@+id/textView86"
                                    android:textStyle="bold" />

                                <RadioGroup
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left"
                                    android:background="@color/transparent">

                                    <RadioButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Live server"
                                        android:id="@+id/rb_server_live"
                                        android:background="@color/transparent"
                                        android:textSize="12dp"
                                        android:textColor="@color/btnSelected" />

                                    <RadioButton
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Alpha development testing server"
                                        android:id="@+id/rb_server_alpha"
                                        android:background="@color/transparent"
                                        android:textSize="12dp"
                                        android:textColor="@color/btnSelected" />
                                </RadioGroup>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/txt_alpha"
                                    android:id="@+id/textView87"
                                    android:textSize="10dp"
                                    android:textColor="@color/bronze" />

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/remote_connection_window"
                                android:id="@+id/email_setting">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tit_email_verification"
                                    android:id="@+id/textView88"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/txt_email_steps"
                                    android:id="@+id/textView89"
                                    android:textSize="10dp"
                                    android:textColor="@color/bronze"
                                    android:layout_gravity="center_horizontal" />

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/btn_send_email"
                                    android:id="@+id/sendMailButton"
                                    android:layout_gravity="center_horizontal" />
                            </LinearLayout>
                        </LinearLayout>
                    </ScrollView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/transparent">

                    <ScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/scrollView9" >

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/remote_connection_window" >

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tit_chat_lines"
                                    android:id="@+id/textView114"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/desc_chat_lines"
                                    android:id="@+id/textView119"
                                    android:textSize="10dp"
                                    android:textColor="@color/bronze" />

                                <EditText
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:inputType="numberDecimal"
                                    android:ems="10"
                                    android:id="@+id/max_lines"
                                    android:singleLine="true"
                                    android:numeric="integer" />

                            </LinearLayout>

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/remote_connection_window">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/desc_share_300_bb"
                                    android:id="@+id/textView120"
                                    android:textSize="10dp"
                                    android:textColor="@color/bronze" />

                                <Button
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/txt_share"
                                    android:id="@+id/btn_share"
                                    android:layout_gravity="center_horizontal" />
                            </LinearLayout>

                        </LinearLayout>
                    </ScrollView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/transparent"></LinearLayout>

            </FrameLayout>
        </LinearLayout>
    </net.okitoo.hackers.Modules.OkitooOverrides.OkitooTabHost>
</LinearLayout>