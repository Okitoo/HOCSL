                            android:layout_height="fill_parent"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:visibility="gone"
                            android:id="@+id/frame_email" />

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:id="@+id/chat_b">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/img_chat_last"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/txt_chat_last"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="3dp"
                        android:maxLines="1"
                        android:background="@color/transparent" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout tools:context="net.okitoo.hackers.commandCenter"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true"
        android:id="@+id/main_not_logged_in"
        android:visibility="visible"
        android:background="@color/toolboxBG2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/login_g"
            android:visibility="gone"
            android:background="@drawable/remote_connection_window" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/transparent"
                android:layout_marginBottom="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/connect_g_plus"
                    android:id="@+id/textView144"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:textStyle="bold"
                    android:textColor="@color/gold" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/gplus2"
                    android:layout_marginRight="10dp"
                    android:background="@color/transparent"
                    android:src="@mipmap/gplus" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/login_other"
                android:id="@+id/other_method"
                android:layout_gravity="right"
                android:textAlignment="center"
                android:textColor="@color/colorText"
                android:textSize="11dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/loginLayout"
            android:visibility="gone"
            android:background="@drawable/remote_connection_window">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Forgot password?"
                android:id="@+id/reset_pass"
                android:layout_gravity="right"
                android:textAlignment="center"
                android:textColor="@color/colorText" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_user"
                android:layout_gravity="center"
                android:hint="@string/user_name"
                android:textAlignment="center"
                android:imeOptions="actionDone"
                android:layout_above="@+id/txt_pass"
                android:layout_centerHorizontal="true"
                android:singleLine="true"
                android:inputType="textNoSuggestions" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:id="@+id/txt_pass"
                android:layout_gravity="center"
                android:hint="@string/password"
                android:textAlignment="center"
                android:password="true"
                android:imeOptions="actionDone"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/txt_user"
                android:layout_alignStart="@+id/txt_user"
                android:singleLine="true"
                android:inputType="textNoSuggestions" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/transparent"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/gplus"
                    android:layout_marginRight="10dp"
                    android:background="@color/transparent"
                    android:src="@mipmap/gplus" />

                <Button
                    android:layout_width="160dp"
                    android:layout_height="30dp"
                    android:text="@string/str_login"
                    android:id="@+id/btn_login"
                    android:layout_below="@+id/txt_pass"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center" />
            </LinearLayout>

            <Button
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:text="@string/str_reg"
                android:id="@+id/btn_register_go"
                android:layout_below="@+id/txt_pass"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/registerLayout"
            android:visibility="visible"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true">

            <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView13"
                android:background="@drawable/remote_connection_window">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/transparent">

                    <EditText
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/reg_user"
                        android:layout_gravity="center"
                        android:hint="@string/user_name"
                        android:textAlignment="center"
                        android:imeOptions="actionDone"
                        android:layout_above="@+id/txt_pass"
                        android:layout_centerHorizontal="true"
                        android:singleLine="true"
                        android:inputType="textNoSuggestions"
                        android:layout_marginTop="25dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/bad_usernames"
                        android:id="@+id/textView2"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:textColor="@color/colorText"
                        android:textSize="11dp" />

                    <EditText
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/reg_pass"
                        android:layout_gravity="center"
                        android:hint="@string/password"
                        android:textAlignment="center"
                        android:imeOptions="actionDone"
                        android:password="true"
                        android:layout_centerVertical="true"
                        android:layout_alignLeft="@+id/txt_user"
                        android:layout_alignStart="@+id/txt_user"
                        android:singleLine="true"
                        android:inputType="textNoSuggestions" />

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="110dp"
                        android:id="@+id/img_captcha"
                        android:layout_gravity="center_horizontal"
                        android:background="@color/transparent" />

                    <EditText
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/reg_captcha"
                        android:layout_gravity="center"
                        android:hint="@string/captcha"
                        android:textAlignment="center"
                        android:imeOptions="actionDone"
                        android:layout_centerVertical="true"
                        android:layout_alignLeft="@+id/txt_user"
                        android:layout_alignStart="@+id/txt_user"
                        android:singleLine="true"
                        android:inputType="textNoSuggestions|number" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="@string/need_help"
                        android:id="@+id/forum_help_register"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:textColor="@color/colorText"
                        android:textSize="11dp"
                        android:layout_marginBottom="10dp" />

                    <Button
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="@string/str_reg"
                        android:id="@+id/btn_register"
                        android:layout_below="@+id/txt_pass"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp" />

                    <Button
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="@android:string/cancel"
                        android:id="@+id/reg_cancel"
                        android:layout_below="@+id/txt_pass"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="By registering you agree to the terms of service\nClick here to read them!"
                        android:id="@+id/tos"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:textColor="@color/colorText"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:textSize="11dp" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/_connecting"
            android:id="@+id/connectingLayout"
            android:layout_gravity="center"
            android:shadowColor="#c1fef8"
            android:shadowRadius="2"
            android:layout_alignParentBottom="true"
            android:layout_toRightOf="@+id/loginLayout"
            android:layout_toEndOf="@+id/loginLayout"
            android:visibility="visible" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:gravity="right">

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/not_connecting_twitter"
            android:id="@+id/not_connecting"
            android:layout_gravity="center"
            android:shadowColor="#c1fef8"
            android:shadowRadius="2"
            android:visibility="gone"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/colorTextWarning"
            android:textSize="10dp" />

    </RelativeLayout>

</RelativeLayout>
