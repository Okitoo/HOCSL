<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/toolboxBG">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/header_gateway_center"
            android:id="@+id/textView"
            android:textSize="15dp"
            android:textStyle="bold"
            style="@style/TextViewStyleTitle"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:background="@color/transparent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="@string/tit_gw_name"
                android:id="@+id/textView5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:id="@+id/txt_gatewayname"
                style="@style/TextEditStyleValue"
                android:paddingTop="0dp"
                android:paddingBottom="0dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tit_gateway_slots"
                android:id="@+id/textView90" />

            <TextView
                style="@style/TextEditStyleValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="..."
                android:id="@+id/txt_gatewayslots"
                android:paddingTop="0dp"
                android:paddingBottom="0dp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent">

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:text="@string/tit_ip_address"
                android:id="@+id/textView7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_ip"
                android:text="..."
                style="@style/TextEditStyleValue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:text="(Giving away your IP address might make you a target)"
                android:layout_marginLeft="5dp"
                android:textSize="10dp"
                style="@style/TextViewStyleWarningSmall" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="2dp" >

            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/sep_hardware_name"
                android:id="@+id/Type"
                android:textSize="10dp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/row_level"
                android:id="@+id/textView23"
                android:textSize="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/row_spec"
                android:id="@+id/textView26"
                android:textSize="10dp" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/transparent">

            <ListView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:id="@+id/lv_hardware"
                android:background="@color/toolboxBG"
                android:divider="#da001d17"
                android:dividerHeight="1dp"
                android:drawSelectorOnTop="false"
                android:headerDividersEnabled="true"
                android:layoutMode="opticalBounds" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>