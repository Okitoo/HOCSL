<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/remote_connection_window">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView15"
        android:background="@color/transparent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/remote_connection_window"
            android:layout_marginBottom="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tit_dash_balance"
                android:id="@+id/textView139"
                android:textStyle="bold" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/transparent">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/imageView13"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:src="@mipmap/dash"
                    android:background="@color/transparent"
                    android:layout_rowSpan="6"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your DASH Address:"
                    android:id="@+id/textView141"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:textSize="10dp"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:id="@+id/dash_balance"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:textSize="10dp"
                    android:textColor="@color/btnSelected"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:id="@+id/dash_address"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:textSize="10dp"
                    android:textColor="@color/btnSelected"
                    android:textStyle="bold"
                    android:layout_marginRight="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balance:"
                    android:id="@+id/textView142"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_bb_dash"
                    android:id="@+id/textView143"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:textSize="10dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:id="@+id/bb_per_dash"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:textSize="10dp"
                    android:textColor="@color/btnSelected"
                    android:textStyle="bold"
                    android:layout_marginBottom="5dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/fmt_convert_to_x_bb"
                    android:id="@+id/dash_convert"
                    android:layout_row="3"
                    android:layout_column="2"
                    android:layout_marginRight="5dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Help"
                    android:id="@+id/dash_help"
                    android:layout_row="3"
                    android:layout_column="3" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_row="0"
                    android:layout_column="3"
                    android:background="@color/transparent">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/dash_copy_address"
                        android:src="@drawable/abc_ic_menu_copy_mtrl_am_alpha"
                        android:tint="@color/colorValueText"
                        android:background="@color/transparent"
                        android:layout_marginLeft="10dp"
                        android:layout_row="1"
                        android:layout_column="3" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:id="@+id/dash_address_url"
                        android:src="@drawable/url"
                        android:tint="@color/colorValueText"
                        android:background="@color/transparent"
                        android:layout_marginLeft="10dp"
                        android:layout_row="1"
                        android:layout_column="3" />

                </LinearLayout>

            </GridLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>